@model IEnumerable<Project.Skillz.Models.Interview>
@using Project.Skillz.Models;
@{
    ViewBag.Title = "Table";
}

<h3 style="text-align: left; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #BE1B35; opacity: 1;">Dashboard /</h3>
<h2 style="text-align: left; font: normal normal normal 20px/12px Lucida Console; letter-spacing: 0px; color: #73737A; opacity: 1;">Interviews</h2>
<div class="input-group" style="width:371px; text-align:left">
    <input type="text" class="form-control" placeholder="Search">
    <div class="input-group-btn">
        <button class="btn btn-default" type="button">
            <i class="glyphicon glyphicon-search"></i>
        </button>
    </div></div>
<script>
    $(document).ready(function () {
        $('#select_all').click(function (e) {
            $(this).closest('table').find('td input:checkbox').prop('checked', this.checked);
        });
    });
</script>
<p style="text-align: right; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #FFFFFF; opacity: 1;">
    <button type="button" class="btn btn-danger" style="border-radius:20px;"><span class="glyphicon glyphicon-plus">&nbsp;</span>@Html.ActionLink("New Interview","#", new { Style = "color:#FFFFFF" }, new { @data_toggle = "modal", @data_target = "#YourModalId" })</button>
    <button type="button" class="btn" style="border-radius:20px;"><span class="glyphicon glyphicon-remove">&nbsp;</span>@Html.ActionLink("Delete Selected", "Delete", "Interview", new { Style = "color:#2D2121" })</button>
    <button type="button" class="btn" style="border-radius:20px;"><span class="glyphicon glyphicon-option-vertical">&nbsp;</span>@Html.ActionLink("More Options", "#", "Interview", new { Style = "color:#2D2121" })</button>
</p>
<div id="YourModalId" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
               
            </div>
            <div class="modal-body container">
                <form class="container" id="create1">
                    <div class="form-group">
                        <label for="usr" style="text-align: left; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #73737A; opacity: 1;">Interview Name</label>
                        <input type="text" class="form-control" id="usr" style="width:400px;background: #FFFFFF 0% 0% no-repeat padding-box; border: 1px solid #707070; border-radius: 7px; opacity: 1;" placeholder="Enter interview name.">
                    </div>
                    <div class="form-group">
                        <label for="sel1" style="text-align: left; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #73737A; opacity: 1;">Skill Level</label>
                        <select class="form-control" style="width:260px;background: #FFFFFF 0% 0% no-repeat padding-box; border: 1px solid #707070; border-radius: 7px; opacity: 1;" id="sel1">
                            <option>Begineer</option>
                            <option>Intermediate</option>
                            <option>Advanced</option>
                        </select>
                    </div>
                    <label for="assmode" style="text-align: left; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #73737A; opacity: 1;">Assesment Modes</label>
                    <div class="form-group" id="assmode">
                        <label class="radio-inline"><input type="radio" name="optradio" checked>Subjective</label>
                        <label class="radio-inline"><input type="radio" name="optradio">Objective</label>
                        <label class="radio-inline"><input type="radio" name="optradio">Both</label>
                    </div>
                </form>   
            </div>
            <div class="modal-footer">
                <button type="submit"form="create1" class="btn btn-default" data-dismiss="modal" style="background: #B70320 0% 0% no-repeat padding-box; box-shadow: 0px 3px 6px #00000029; border-radius: 32px; opacity: 1;">Save Changes</button>
            </div>
        </div>

    </div>
</div>
<table id="skillz" class="table table-condensed" style="background: #FFFFFF 0% 0% no-repeat padding-box; border: 1px solid #707070; opacity: 1;">
    <thead style="        background: #F0F0F0 0% 0% no-repeat padding-box;
        text-align: left;

        font: normal normal normal 14px /12px Lucida Console;
        letter-spacing: 0px;
        color: #73737A;
        opacity: 1;">
        <tr>

            <th><input type="checkbox" id="select_all" name="select_invoice" />
                
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.InterviewName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkillLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssessmentModes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Questions)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody style="text-align: left; font: normal normal normal 14px/12px Lucida Console; letter-spacing: 0px; color: #73737A; opacity: 1;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox"  />
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.InterviewName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssessmentModes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Questions)
                </td>
                
            </tr>
        }
    </tbody>
</table>
